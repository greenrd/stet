<%INIT>
use CGI;
require "/var/www/stet/stetsubs.pl";
my $Tickets = RT::Tickets->new($session{'CurrentUser'});
$Tickets->FromSQL($ARGS{'Query'});
#$Tickets->FromSQL(param('Query'));
$r->content_type('application/rdf+xml');



        # create an RSS 1.0 file (http://purl.org/rss/1.0/)
        use XML::RSS;
        my $rss = new XML::RSS (version => '1.0');
        $rss->channel(
          title        => "GPLv3 Comments: " . humanQuery($ARGS{'Query'}),
          link         => "http://gplv3.fsf.org/comments/?Query=". $ARGS{'QUERY'},
          description  => "This is a feed of comments on the draft license, generated by the query \"" . humanQuery($ARGS{'Query'}) . "\"",
          dc => {
          },
          syn => {
            updatePeriod     => "hourly",
            updateFrequency  => "1",
            updateBase       => "1901-01-01T00:00+00:00",
          },
        );


    while ( my $Ticket = $Tickets->Next()) {
       my $row;
       my $subjtext = cleanNoteSel(\$Ticket);
       my $para = $Ticket->FirstCustomFieldValue('NoteStartNodeId');
       my $description = "Regarding: <em>$subjtext</em><br/>In: $para<br/>".$Ticket->Transactions->First->Content;
        $rss->add_item(
          title       =>  $Ticket->Subject,
          link        => "http://gplv3.fsf.org/comments/showcomments.pl?id=".$Ticket->id,
          description =>  $description,
          dc => {
            subject  => $Ticket->Subject,
            creator  => $Ticket->CreatorObj->RealName,
          },
        );
    }
$m->out($rss->as_string);
$m->abort();
</%INIT>
