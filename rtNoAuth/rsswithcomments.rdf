<%INIT>
use CGI;
use Date::Parse;
use Date::Format;
require "/var/www/stet/stetsubs.pl";
my $Tickets = RT::Tickets->new($session{'CurrentUser'});
$Tickets->FromSQL($ARGS{'Query'});
$Tickets->OrderBy( FIELD => 'id', ORDER => "DESC");
$r->content_type('application/rdf+xml');



        # create an RSS 1.0 file (http://purl.org/rss/1.0/)
        use XML::RSS;
        my $rss = new XML::RSS (version => '1.0');
        $rss->channel(
          title        => "50 newest GPLv3 Comments: " . humanQuery($ARGS{'Query'}),
          link         => "http://gplv3.fsf.org/comments/?Query=". $ARGS{'QUERY'},
          description  => "This is a feed of the 50 most recent comments on the draft license, generated by the query \"" . humanQuery($ARGS{'Query'}) . "\"",
          dc => {
          },
          syn => {
            updatePeriod     => "hourly",
            updateFrequency  => "1",
            updateBase       => "1901-01-01T00:00+00:00",
          },
        );

	my $i = 0;

    while (( my $Ticket = $Tickets->Next()) && ($i < 50)) {
       my $row;
       my $subjtext = cleanNoteSel(\$Ticket);
       my $para = $Ticket->FirstCustomFieldValue('NoteStartNodeId');
       my $description = "Regarding: <em>$subjtext</em><br/>In: $para<br/>".$Ticket->Transactions->First->Content;
       my $isodate = str2time($Ticket->Created);
#       my $showdate = time2str("%a, %d %b %Y %H:%M:%S -0500", $isodate);
       my $showdate = time2str("%Y-%m-%dT%H:%M:%S-05:00", $isodate);
#                              2002-10-02T10:00:00-05:00
#                              2006-29-01T23:24:42-05:00
        $rss->add_item(
          title       =>  $Ticket->Subject,
          link        => "http://gplv3.fsf.org/comments/rt/readsay.html?id=".$Ticket->id,
          description =>  $description,
          dc => {
            subject  => $Ticket->Subject,
            creator  => $Ticket->CreatorObj->RealName,
	    date => $showdate,
          },
        );
	$i++;
    }
$m->out($rss->as_string);
$m->abort();
</%INIT>
